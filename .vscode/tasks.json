{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "C++: build active file (MSVC)",
      "type": "shell",
      "command": "cl",
      "args": [
        "/std:c++20",
        "/EHsc",
        "/W4",
        "/I",
        "${workspaceFolder}\\common\\cpp\\include",
        "${file}",
        "/Fe:${workspaceFolder}\\build\\${fileBasenameNoExtension}.exe"
      ],
      "group": "build",
      "problemMatcher": [
        "$msCompile"
      ]
    },
    {
      "label": "C++: run active file",
      "type": "shell",
      "command": "${workspaceFolder}\\build\\${fileBasenameNoExtension}.exe",
      "dependsOn": "C++: build active file (MSVC)"
    },
    {
      "label": "Python: run active file (venv)",
      "type": "shell",
      "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
      "args": [
        "${file}"
      ]
    }
  ]
}