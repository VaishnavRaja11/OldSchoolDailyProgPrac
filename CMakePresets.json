{
  "version": 6,
  "configurePresets": [
    {
      "name": "msvc-debug",
      "displayName": "MSVC Debug (VS 2022)",
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_STANDARD": "20",
        "ENABLE_TESTS": "OFF"
      }
    },
    {
      "name": "msvc-release",
      "displayName": "MSVC Release (VS 2022)",
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_STANDARD": "20",
        "ENABLE_TESTS": "OFF"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "build-debug",
      "configurePreset": "msvc-debug"
    },
    {
      "name": "build-release",
      "configurePreset": "msvc-release"
    }
  ],
  "testPresets": [
    {
      "name": "test-debug",
      "configurePreset": "msvc-debug"
    }
  ]
}